{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./packages/core/src",
    "outDir": "./dist"
  },
  "include": [
    "packages/core/src/main/main.ts",
    "packages/core/src/main/**/*.ts",
    "packages/core/src/preload/**/*.ts",
    "packages/types/src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages/ui/**/*",
    "packages/utils/**/*",
    "packages/services/**/*",
    "src/renderer/**/*",
    "src/logWindowRenderer.ts"
  ]
}